{
	"$id": "https://digitale_delta/waterkwaliteit-api.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "waterkwaliteit-api",
	"type": "object",
	"properties": {
		"measurementobjects": {
			"description": "Meetobjecten (meetlocaties)",
			"type": "array",
			"items": {
				"$ref": "#/$defs/measurementObjectType"
			}
		},
		"samples": {
			"description": "Metingen",
			"type": "array",
			"items": {
				"$ref": "#/$defs/sampleType"
			}
		},
		"measurements": {
			"description": "Metingen",
			"type": "array",
			"items": {
				"$ref": "#/$defs/measurementType"
			}
		}
	},
	"$defs": {
		"geometryType": {
			"$ref": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/geojson.json"
		},
		"identificationType": {
			"type": "object",
			"properties": {
				"@context": {
					"type": "string",
					"description": "Namespace van de organisatie."
				},
				"@type": {
					"type": "string",
					"description": "Type aanduiding. Mogelijke waarden: measurementobject, sample, measurement.",
					"enum": [
						"measurementobject",
						"sample",
						"measurement"
					]
				},
				"@id": {
					"type": "string",
					"description": "Unieke aanduiding van het object binnen @context, maar liever nog globaal uniek. Bij voorkeur een UUID V4 als string."
				}
			},
			"required": [
				"@id",
				"@type",
				"@id"
			]
		},
		"measurementObjectType": {
			"type": "object",
			"properties": {
				"identification": {
					"$ref": "#/$defs/identificationType",
					"description": "Lokale identificatie van het meetpunt/meetobject volgens bronhouder."
				},
				"description": {
					"type": "string",
					"description": "Omschrijving van het meetpunt/meetobject (max. 100 tekens). Opgelet! Gebruik alleen de tekens 'A-Z','a-z','0-9','_','-' en spaties."
				},
				"geometry": {
					"$ref": "#/$defs/geometryType"
				},
				"krwWaterType": {
					"type": "string",
					"description": "Aquo-code van het KRW-watertype."
				},
				"waterCourseCategory": {
					"type": "string",
					"description": "Code van de Wwatergangcategorie waarin het meetpunt ligt: A - Primaire watergang, B - Secundaire watergang, C - Tertiaire watergang, O - Overige watergangen",
					"enum": [
						"A",
						"B",
						"C",
						"O"
					]
				},
				"locatedInGeoObject": {
					"$ref": "#/$defs/identificationType",
					"description": "Code/identificatie van een geoobject waarin het meetpunt ligt. Een identificatie moet beperkt zijn tot 36 tekens en mag alleen de tekens 'A-Z','a-z','0-9','_','-' bevatten"
				},
				"belongsToGeoObject": {
					"$ref": "#/$defs/identificationType",
					"description": "Code/identificatie  van een geoobject waar het meetpunt bij hoort, bijv. de KRW-monitoringlocatie. Een identificatie moet beperkt zijn tot 36 tekens en mag alleen de tekens  Een identificatie moet beperkt zijn tot 36 tekens en mag alleen de tekens 'A-Z','a-z','0-9','_','-' bevatten"
				},
				"weightingFactor": {
					"type": "string",
					"description": "Factor die de bijdrage (naar rato van het oppervlak) van het meetpunt aan het oordeel van 'HoortBijGeoObject' weergeeft. Deze wegingsfactor moet dus evenredig zijn met de oppervlakte die het meetpunt representeert. De som van de wegingsfactoren (per KRW. mon.loc.) hoeft geen 1 te zijn, en kan dus de getalswaarde van de representatieve oppervlakte bevatten"
				}
			},
			"required": [
				"identification",
				"description",
				"geometry",
				"krwWaterType"
			]
		},
		"sampleType":
		{
			"properties": {
				"identification": {
					"$ref": "#/$defs/identificationType",
					"description": "Unieke identificatie van het monster. Bij voorkeur een unique idenfitier (UUID V4)."
				},
				"measurementObjectIdentification": {
					"$ref": "#/$defs/identificationType",
					"description": "Identificatie van het meetobject/meetlocatie."
				},
				"materialClass": {
					"type": "string",
					"description": "Monstercompartiment volgens Aquo."
				},
				"samplingTime": {
					"type": "string",
					"description": "Bemonsteringsdatum/tijd.",
					"format": "date-time"
				},
				"geometry": {
					"$ref": "#/$defs/geometryType"
				},
				"samplingDevice": {
					"type": "string",
					"description": "BemonsteringsApparaat volgens Aquo."
				},
				"samplingMethod": {
					"type": "string",
					"description": "Bemonsteringsmethode volgens Aquo."
				},
				"sampleProcessingMethod": {
					"type": "string",
					"description": "Monsterbewerkingsmethode volgens Aquo."
				},
				"samplingType": {
					"type": "string",
					"description": "Bemonsteringssoort volgens Aquo."
				},
				"organ": {
					"type": "string",
					"description": "Orgaan volgens Aquo."
				},
				"organism": {
					"type": "string",
					"description": "Organisme volgens Aquo."
				}
			},
			"required": [
				"identification",
				"materialClass",
				"samplingTime"
			]
		},
		"measurementType": {
			"description": "",
			"type": "object",
			"properties": {
				"namespace": {
					"$ref": "#/$defs/identificationType"
				},
				"identification": {
					"$ref": "#/$defs/identificationType",
					"description": "Unieke identificatie van de meting. Bij voorkeur een unique identifier (UUID V4)."
				},
				"sampleIdentification": {
					"$ref": "#/$defs/identificationType",
					"description": "Identificatie van het monster."
				},
				"measurementObjectIdentification": {
					"$ref": "#/$defs/identificationType",
					"description": "Identificatie van het meetobject/meetlocatie."
				},
				"resultDate": {
					"type": "string",
					"description": "Resultaat meetdatum (zonder tijd).",
					"format": "date"
				},
				"resultTime": {
					"type": "string",
					"description": "Resultaat starttijd",
					"format": "date"
				},
				"phenomenonStartDate": {
					"type": "string",
					"description": "Begindatum",
					"format": "date"
				},
				"phenomenonStartTime": {
					"type": "string",
					"description": "Begintijd",
					"format": "time"
				},
				"phenomenonEndDate": {
					"type": "string",
					"description": "Einddatum",
					"format": "date"
				},
				"phenomenonEndTime": {
					"type": "string",
					"description": "Eindtijd",
					"format": "time"
				},
				"quantity": {
					"type": "string",
					"description": "Grootheid volgens Aquo.."
				},
				"typing": {
					"type": "string",
					"description": "Geobserveerde parameter (Typering) volgens Aquo."
				},
				"parameter": {
					"type": "string",
					"description": "Geobserveerde parameter (Chemische stof of object) volgens Aquo."
				},
				"biotaxon": {
					"type": "string",
					"description": "Geobserveerde parameter (Biotaxon uit TWN lijst) volgens Aquo."
				},
				"condition": {
					"type": "string",
					"description": "Hoedanigheid"
				},
				"unit": {
					"type": "string",
					"description": "Eenheid volgens Aquo. Mag ontbreken indien de waarde geen dimensie heeft."
				},
				"compartment": {
					"type": "string",
					"description": "Analysecompartiment volgens Aquo."
				},
				"numericValue": {
					"type": "number",
					"description": "Numerieke waarde"
				},
				"alphanumericValue": {
					"type": "string",
					"description": "Alfanumerieke waarde (classificatie) volgens Aquo."
				},
				"limitSymbol": {
					"type": "string",
					"description": "Limietsymbool. Mogelijke waarden: <, >",
					"enum": [
						"<",
						">"
					]
				},
				"sensingLocationType": {
					"type": "string",
					"description": "Locatie type waardebepaling volgens Aquo."
				},
				"analyticalTechnique": {
					"type": "string",
					"description": "Analysemethode volgens Aquo."
				},
				"valueProcessingMethod": {
					"type": "string",
					"description": "Waardebewerkingsmethode volgens Aquo."
				},
				"valuationMethod": {
					"type": "string",
					"description": "Waardebepalingsmethode volgens Aquo."
				},
				"qualityIndicatorType": {
					"type": "string",
					"description": "Kwaliteitsoordeel volgens Aquo."
				},
				"stageOfLife": {
					"type": "string",
					"description": "Levensstadium volgens Aquo, alleen wanneer parameter biotaxon is."
				},
				"lengthClass": {
					"type": "string",
					"description": "Lengteklasse volgens Aquo, alleen wanneer parameter biotaxon is."
				},
				"gender": {
					"type": "string",
					"description": "Geslacht volgens Aquo, alleen wanneer parameter biotaxon is."
				},
				"appearance": {
					"type": "string",
					"description": "Verschijningsvorm volgens Aquo, alleen wanneer parameter biotaxon is."
				},
				"lifeform": {
					"type": "string",
					"description": "Levensvorm volgens Aquo, alleen wanneer parameter biotaxon is."
				},
				"behaviour": {
					"type": "string",
					"description": "Gedrag volgens Aquo, alleen wanneer parameter biotaxon is."
				}
			},
			"required": [
				"identification",
				"sampleIdentification",
				"measurementObjectIdentification",
				"resultDate",
				"phenomenonStartDate",
				"quantity",
				"compartment"
			]
		}
	}
}
